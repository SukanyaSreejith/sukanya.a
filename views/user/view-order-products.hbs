
<div class="container" style="margin-top:100px;">
  <h2>Products</h2> 
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
    {{#each products}}
      <tr>
        <td> 
        <div class="cart-info">
           <img src="/product-images/{{this.product._id}}.jpg" >
           <div>
             <p>{{this.product.name}}</p>
            
           </div>
        </div>
        </td>
        <td>
            <div>
             <p>{{this.quantity}}</p>
            
           </div>
        </td>
        <td>{{this.product.price}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  
   
     </div>
     </div>
</div>

