
<div class="col-10" style="text-align: justify;margin-top:100px;">
  {{#if Remove}}
   <p class="error" style="color: white;font-size:medium;font-weight:bolder">Item removed</p>
   {{/if}}
  <h2>View Vendors</h2> 
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>VENDOR NAME</th>
        <th>SHOP NAME</th>
        <th>LOGO</th>
        <th>ACTIONS</th>
      </tr>
    </thead>
    <tbody>
    {{#each vendors}}
      <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.shopname}}</td>
      <td><img style="width:50px;height:50px" src="/vendor-images/{{this._id}}.jpg" alt=""</td>
      <td>
        <a href="/admin/edit-vendor/{{this._id}}" class="btn btn-primary" style="font-size: small">Edit</a>
        <a href="/admin/block-vendor/{{this._id}}" style="font-size: small;"class="btn btn-danger" onclick="return confirm('Are you sure to block {{this.name}}')">Block</a>
      </td>
    </tr> 
   {{/each}}
    </tbody>
  </table>
  
     <div class="float-right pr-5"> 
     <a href="/admin/add-vendor" class="btn btn-primary mt-3" style="background: light;font-size:medium;color:white;font-weight:bold;width:200px;height:40px" ><b>Add Vendor</b></a> 
    </div>
     </div>
     </div>
</div>












